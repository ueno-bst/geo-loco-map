{
  /* Basic Options */
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "es5",
      "esnext",
      "DOM"
    ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "incremental": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "@types/yahoo/yahoo-map.d.ts",
      "node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "@types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
  ]
}
