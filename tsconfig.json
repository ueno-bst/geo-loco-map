{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ES2018",
        "module": "Node16",
        "lib": [
            "dom",
            "DOM.Iterable",
            "ES2018"
        ],
        "moduleResolution": "Node",
        "moduleDetection": "force",
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "noEmit": false,
//        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@/*": [
                "test/*"
            ]
        },
        "types": [
            "googlemaps",
            "yahoo"
        ],
        "typeRoots": [
            "node_modules/@types",
            "@types",
            "src"
        ]
    },
    "include": [
        "@types/**/*.d.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "test/**/*.ts",
        "test/**/*.d.ts",
        "test/**/*.tsx",
        "test/**/*.vue",
        "node_modules"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
